{
  "name": "@devcycle/test-harness",
  "scripts": {
    "test": "jest --verbose",
    "test:ci": "yarn test --setupFiles=./ci-config.ts",
    "start:nodejs": "cd proxies/nodejs && NODE_PRESERVE_SYMLINKS=1 ts-node app.ts",
    "start:go": "cd proxies/go && go run .",
    "start:dotnet": "cd proxies/dotnet && dotnet run",
    "start:java": "cd proxies/java && ./gradlew bootRun"
  },
  "version": "1.0.0",
  "description": "A universal testing system for DevCycle SDKs",
  "main": "index.js",
  "repository": "git@github.com:DevCycleHQ/test-harness.git",
  "author": "DevCycle <engineering@devcycle.com>",
  "license": "MIT",
  "devDependencies": {
    "@devcycle/types": "^1.0.52",
    "@koa/router": "^12.0.0",
    "@trendyol/jest-testcontainers": "^2.1.1",
    "@types/jest": "^29.2.3",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "axios": "^1.1.3",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.4",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "lint-staged": "^13.0.3",
    "nock": "^13.2.9",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@3.4.1"
}
